{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": "airbnb",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "max-len": [1, 150, 4],
        "class-methods-use-this": 0,
        "no-underscore-dangle": 0,
        "semi": ["error", "never"],

        "react/prop-types": 2,
        "react/no-unused-prop-types": 1
    }
}